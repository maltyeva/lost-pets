<h1>Did you lose your 🐶 😸 🐰 ? </h1>
<div class="container">
  <div class="row">
    <% @pets.each do |p| %>
      <div class="col col-xs-12 col-sm-4">
        <h4><%= p.species %> - <%= p.description %></h4>
        <p>Found on <%= p.found_on.strftime("%A, %b %d") %> in <%= p.location %></p>
        <p>Found: <%= p.found %></p>
        <small><%= link_to "Mark As Found", pet_path(p), method: "patch" %> </small>
      </div>
    <% end %>
  </div>
</div>
<%= link_to "Add a new 🐕", new_pet_path %>
